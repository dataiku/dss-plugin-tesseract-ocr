{
    "meta": {
        "label": "OCR - text extraction from images (to folder)",
        "description": "Extract text from JPG images into a folder of text files",
        "icon": "icon-camera"
    },

    "kind": "PYTHON",


    "inputRoles" : [
        {
            "name": "input_folder",
            "label": "Input folder",
            "arity": "UNARY",
            "required": true,
            "description": "Folder of input images or PDF",
            "acceptsManagedFolder": true,
            "acceptsDataset": false
        }
    ],

    "outputRoles" : [
        {
            "name": "output_folder",
            "label": "Output folder",
            "arity": "UNARY",
            "required": true,
            "description": "Folder of extracted text",
            "acceptsManagedFolder": true,
            "acceptsDataset": false
        }
    ],

    "params": [
         {
            "name": "advanced_parameters",
            "label" : "Advanced preprocessing parameters",
            "type": "BOOLEAN"
        },
        {
            "name": "deskew",
            "label": "Deskew image to get horizontal text",
            "type": "BOOLEAN",
            "description": "Can take a long time",
            "defaultValue": false,
            "visibilityCondition" : "model.advanced_parameters"
        },
        {
            "name": "language",
            "label": "Specify language",
            "type": "STRING",
            "description": "Enter language code found at https://tesseract-ocr.github.io/tessdoc/Data-Files",
            "visibilityCondition" : "model.advanced_parameters"
        },
        {
            "name": "remove_special_characters",
            "label": "Remove special chararters",
            "type": "BOOLEAN",
            "description": "Keep only letters and numbers",
            "defaultValue": false,
            "visibilityCondition" : "model.advanced_parameters"
        }
    ],

    "resourceKeys": []

}
